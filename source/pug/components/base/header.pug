mixin header(currentUrl)
  -
    const headerTopLinks = [
      {
        href: "#",
        text: "О компании"
      },
      {
        href: "#",
        text: "Контакты"
      },
      {
        href: "#",
        text: "Вопрос-ответ"
      },
    ]

    const headerBottomLinks = [
      {
        href: "#",
        text: "Каталог продукции"
      },
      {
        href: "#",
        text: "Гибка металла"
      },
      {
        href: "#",
        text: "Резка"
      },
      {
        href: "#",
        text: "Доставка"
      },

    ]

  header.page__header.header.header--no-js
    .header__top-container
      .header__top-container-inner.container
        nav.main-nav
          ul.main-nav__list
            each link in headerTopLinks
              li.main-nav__item
                a.main-nav__link(href=link.href)= link.text
        button.header__city Екатеринбург

    .header__bottom-container.container
      if(currentUrl === "index.html")
        //- lighthouse снимает 10 баллов SEO за <a> без href
        span.header__logo.logo
          //- Указать директорию, название файла, раcширение, ширину, высоту и alt
          +img("logo__image", "images", "logo","png", "272", "71", "Логотип Сталь Урала." )
      else
        a.header__logo.logo(href="index.html" aria-label="Переход на главную")
          +img("logo__image", "images", "logo","png", "272", "71", "Логотип Сталь Урала." )
      nav.secondary-nav
        ul.secondary-nav__list
          each link in headerBottomLinks
            li.secondary-nav__item
              a.secondary-nav__link(href=link.href)= link.text
        button.secondary-nav__button
          span.visually-hidden Перейти в каталог продукции
      .header__info-for-user
        a.header__phone(href="tel:+73433191915") +7 (343) 319-19-15
        button.header__search
          span.visually-hidden Поиск по сайту
        button.header__cart
          span.visually-hidden Корзина
          span.header__cart-number 1
        span.header__price 12 750 ₽
        button.header__toggle-button
          .header__toggle-button-line
          .header__toggle-button-line
          .header__toggle-button-line
          span.visually-hidden Открыть мобильное меню
        button.header__button.button(type="button") Оставить заявку
